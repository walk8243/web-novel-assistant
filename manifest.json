{
	"name": "Web Novel Assistant",
	"description": "Web小説を読むためのアシスタントツール",
	"version": "0.0.1",
	"manifest_version": 3,
	"permissions": [
		"activeTab"
	],
	"background": {
		"service_worker": "dist/background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://ncode.syosetu.com/**",
				"https://novel18.syosetu.com/**"
			],
			"run_at": "document_idle",
			"js": ["dist/script/syosetu.js"]
		}
	],
	"commands": {
		"next-page": {
			"suggested_key": {
				"default": "Ctrl+Right"
			},
			"description": "次のページへ"
		},
		"prev-page": {
			"suggested_key": {
				"default": "Ctrl+Left"
			},
			"description": "前のページへ"
		}
	},
	"icons": {
		"48": "image/icon48.png",
		"128": "image/icon128.png"
	}
}
